{
  "name": "postybirb",
  "version": "2.2.61",
  "description": "PostyBirb is an application that helps artists post art and other multimedia to multiple websites more quickly.",
  "main": "main.js",
  "scripts": {
    "clean": "rm -rf electron-dist/",
    "start": "electron main.js --develop",
    "eb-unix": "electron-builder -m",
    "eb-linux": "electron-builder -l",
    "eb-windows": "electron-builder -w",
    "build": "export $(cat .env | xargs) && electron-builder -mwl -p always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://mvdicarlo@github.com/mvdicarlo/postybirb.git"
  },
  "keywords": [
    "postybirb",
    "crossposter",
    "nodejs",
    "angular",
    "electronjs",
    "electron"
  ],
  "author": "Michael DiCarlo",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/mvdicarlo/postybirb/issues"
  },
  "homepage": "https://github.com/mvdicarlo/postybirb#readme",
  "build": {
    "appId": "com.lemonynade.postybirb",
    "productName": "PostyBirb",
    "publish": {
      "provider": "github",
      "owner": "mvdicarlo",
      "repo": "postybirb"
    },
    "directories": {
      "buildResources": "build",
      "output": "electron-dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icons/icon.icns",
      "gatekeeperAssess": false,
      "target": [
        "zip",
        "dmg"
      ]
    },
    "linux": {
      "artifactName": "${productName}-${version}.${ext}",
      "icon": "icons/icon_256x256x32.png",
      "category": "Network",
      "target": [
        "AppImage",
        "snap"
      ]
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    },
    "win": {
      "publisherName": [
        "Michael DiCarlo"
      ],
      "icon": "icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "electron": "^5.0.12",
    "electron-builder": "^20.44.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0"
  },
  "dependencies": {
    "chardet": "^0.8.0",
    "cryptr": "^4.0.2",
    "electron-context-menu": "^0.10.1",
    "electron-find": "^1.0.5",
    "electron-log": "^2.2.17",
    "electron-updater": "^4.1.2",
    "electron-window-state": "^5.0.3",
    "express": "^4.16.4",
    "form-data": "^2.3.3",
    "form-urlencoded": "^4.0.0",
    "fs-extra": "^7.0.1",
    "got": "^9.6.0",
    "html-entities": "^1.2.1",
    "iconv-lite": "^0.5.0",
    "lowdb": "^1.0.0",
    "mastodon-api": "^1.3.0",
    "parse5": "^5.1.0",
    "request": "^2.88.0",
    "sanitize-html": "^1.20.1",
    "set-cookie-parser": "^2.3.5",
    "tough-cookie": "^3.0.0"
  }
}
